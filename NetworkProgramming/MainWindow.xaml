<Window x:Class="NetworkProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Label Content="Сетевое программирование"/>
        <Button x:Name="ClientServerButton"
                Click="ClientServerButton_Click">
            Клиент-серверная архитектура
        </Button>
        <Button x:Name="HttpButton"
                Click="HttpButton_Click">
            Протокол НТТР
        </Button>
        <Button x:Name="WebApiButton"
                Click="WebApiButton_Click">
            Web-API
        </Button>
        <Button x:Name="SmtpButton"
                Click="SmtpButton_Click">
            SMTP
        </Button>
    </StackPanel>
</Window>
